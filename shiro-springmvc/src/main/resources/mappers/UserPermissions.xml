        update sys_user_permissions set user_id = #{userId} and permission_id = #{permissionId} where id = #{id}
    </update>
    <select id="select" resultMap="userPermissions" parameterType="com.learn.shiro.pojo.shiro.SysUserRoles">
        select * from sys_user_permissions where user_id = #{userId} and permission_id = #{permissionId}
    </select>
