<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <properties resource="properties.yml"/>

    <settings>
        <setting name="logImpl" value="LOG4J"/>
    </settings>

    <typeAliases>
        <typeAlias alias="SysPermission" type="com.learn.shiro.pojo.shiro.SysPermission"/>
        <typeAlias alias="SysRole" type="com.learn.shiro.pojo.shiro.SysRole"/>
        <typeAlias alias="SysRolePermissions" type="com.learn.shiro.pojo.shiro.SysRolePermissions"/>
        <typeAlias alias="SysUser" type="com.learn.shiro.pojo.shiro.SysUser"/>
        <typeAlias alias="SysUserPermissions" type="com.learn.shiro.pojo.shiro.SysUserPermissions"/>
        <typeAlias alias="SysUserRoles" type="com.learn.shiro.pojo.shiro.SysUserRoles"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC">
            </transactionManager>
            <dataSource type="POOLED">
                <property name="driver" value="${jdbc.driver}"/>
                <property name="url" value="${jdbc.url}"/>
                <property name="username" value="${jdbc.username}"/>
                <property name="password" value="${jdbc.password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mappers/PermissionMapper.xml" />
        <mapper resource="mappers/RoleMapper.xml" />
        <mapper resource="mappers/RolePermissions.xml" />
        <mapper resource="mappers/SysUserMapper.xml" />
        <mapper resource="mappers/UserPermissions.xml" />
        <mapper resource="mappers/UserRoles.xml" />
    </mappers>

</configuration>